<% include ./include/dash_header %>

    <!-- partial -->
    <div class="main-panel">
      <div class="content-wrapper">
        <div class="row">
          <div class="col-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title" style = "margin: 30px 0 0 0; font-size: 30px; color: green;">농작물 등록하기 <i class="mdi mdi-leaf"></i></h4>
                <p class="card-description" style = "margin: 0.8rem 0 0 0">
                  새롭게 추가하고 싶은 농작물을 등록해주세요.
                </p>
                <form class="forms-sample" style="margin: 50px 0 0 0;">
                  <div class="form-group">
                    <label for="Cropkind">농작물 종류</label>
                      <select class="form-select" aria-label="Default select example" id="Cropkind">
                        <% for (var i = 0; i < db_data.length; i++) { %>
                          <option><%=db_data[i].cropsName %></option>
                        <% } %>
                      </select>
                    </div>
                  <div class="form-group">
                    <label for="CropName1">농작물 이름</label>
                    <input type="text" class="form-control" id="CropName1" placeholder="ex) 벼">
                  </div>
                  <div class="form-group row">
                    <div class="col">
                      <label for="Sowing2">파종 시기</label>
                      <input type="text" class="form-control" id="datepicker" placeholder="ex) 01/01/2021">
                    </div>
                    <div class="col">
                      <label for="Sowing2">재배 예정 시기</label>
                      <input type="text" class="form-control" id="datepicker2" placeholder="ex) 01/02/2021">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="cropmemo">메모</label>
                    <textarea class="form-control" id="cropmemo" rows="3" style="height: 150px;"></textarea>
                  </div>
                  <button type="button" class="btn btn-success btn-icon-text"style="float: right; margin: 25px 0 0 0;">
                    <i class="mdi mdi-plus"></i>                                                    
                    &nbsp; 등록하기
                  </button>
                  <button type="button" class="btn btn-warning btn-icon-text"style="float: right; margin: 25px 20px 0 0;">
                    <i class="mdi mdi-minus"></i>                                                    
                    &nbsp; 취소하기
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>

<% include ./include/dash_footer %>