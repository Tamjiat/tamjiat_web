<% include ../include/dash_header %>
<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card" style = "margin: 50px 0 80px 0">
            <div class="card-body">
              <h4 class="card-title" style = "margin: 30px 0 0 0; font-size: 30px;color: green;">공지사항&nbsp;<i class="mdi mdi-clipboard-text"></i></h4>
              <p class="card-description" style = "margin: 0.8rem 0 0 0">
                탐지앗의 공지사항을 확인해주세요.
              </p>
              <div class="table-responsive" style = "margin: 25px 0 20px 0">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th class="col-md-1 text-primary"></th>
                      <th class="col-md-3"></th>
                      <th class="col-md-1"></th>
                      <th class="col-md-1"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i =(n_num - 1) * max_value; i < n_num * max_value; i++){ %>
                      <% var data_value=db_data[i]; if(data_value===undefined){ continue; } %>
                      <tr onclick="location.href='/dash/noticedetail/<%= data_value.nid %>'">
                      <td>
                        [ 공지 ]
                      </td>
                      <td>
                        <%= data_value.nTitle %>
                      </td>
                      <td>
                        <%= data_value.nWriter %>
                      </td>
                      <td>
                        <%= data_value.nDate %>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
                <nav>
                  <ul class="pagination justify-content-center mt-5">
                    <% if(n_num == 1) { %>
                        <li class="page-item"><a id="prev" class="page-link" style="color: black; display:none;" href="/dash/notice/<%=Number(n_num)-1%>">">이전</a></li>
                    <% } else if (n_num > 1) { %>
                        <li class="page-item"><a id="prev" class="page-link" style="color: black; display:block;" href="/dash/notice/<%=Number(n_num)-1%>">이전</a></li>
                    <% } %>
                    <% for(var j = 1; j<= Math.ceil(db_data.length / max_value); j++){ %>
                      <%if(j != n_num){%>
                        <li class="page-item"><a class="page-link" style="color: black;" href="/dash/notice/<%= j %>"><%= j %></a>
                      <%}else{%>
                        <li class="page-item"><a class="page-link" style="color: black; background-color: #c8c8c8;" href="/dash/notice/<%= j %>"><%= j %></a>
                      <%}%>
                    <% } if(n_num == Math.ceil(db_data.length / max_value)) { %>
                        <li class="page-item"><a id="next" class="page-link" style="color: black; display:none;" href="/dash/notice/<%=Number(n_num)+1%>">다음</a></li>
                    <% } else if (n_num < Math.ceil(db_data.length / max_value)) { %>
                        <li class="page-item"><a id="next" class="page-link" style="color: black; display:block;" href="/dash/notice/<%=Number(n_num)+1%>">다음</a></li>
                    <% } %></ul>
                </nav>
                  <button type="button" class="btn btn-success btn-icon-text"style="float: right;">
                    <i class="mdi mdi-library-plus"></i>                                                    
                    &nbsp; 게시글 등록하기
                </button>

              </div>
            </div>
          </div>
        </div>
      </div>
<% include ../include/dash_footer %>